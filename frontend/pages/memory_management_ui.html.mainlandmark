    <script>
        // Load status on page load
        window.addEventListener('DOMContentLoaded', () => {
            loadHeartbeatStatus();
            // Refresh status every 10 seconds
            setInterval(loadHeartbeatStatus, 10000);
        });

        async function loadHeartbeatStatus() {
            try {
                const response = await fetch('/v1/debug/heartbeat/status');
                if (!response.ok) throw new Error('Failed to load heartbeat status');

                const data = await response.json();
                updateStatistics(data);
                updateHeartbeatStatus(data);
            } catch (error) {
                console.error('Error loading heartbeat status:', error);
            }
        }

        function updateStatistics(data) {
            document.getElementById('totalMemories').textContent = data.heartbeat.total_memories || 0;
            document.getElementById('runCount').textContent = data.heartbeat.run_count || 0;
            document.getElementById('heartbeatMode').textContent = data.heartbeat.mode || 'unknown';

            const lastRun = data.heartbeat.last_run;
            if (lastRun) {
                const date = new Date(lastRun);
                const now = new Date();
                const diffMs = now - date;
                const diffMins = Math.floor(diffMs / 60000);
                document.getElementById('lastRun').textContent = diffMins < 60
                    ? `vor ${diffMins}m`
                    : `vor ${Math.floor(diffMins / 60)}h`;
            } else {
                document.getElementById('lastRun').textContent = 'Noch nie';
            }
        }

        function updateHeartbeatStatus(data) {
            const statusDiv = document.getElementById('heartbeatStatus');
            const hb = data.heartbeat;

            statusDiv.innerHTML = `
                <div class="status-row">
                    <span class="status-label">Letzter Run:</span>
                    <span class="status-value">${hb.last_run ? new Date(hb.last_run).toLocaleString('de-DE') : 'Noch nie'}</span>
                </div>
                <div class="status-row">
                    <span class="status-label">Letzte Konsolidierung:</span>
                    <span class="status-value">${hb.last_consolidation ? new Date(hb.last_consolidation).toLocaleString('de-DE') : 'Noch nie'}</span>
                </div>
                <div class="status-row">
                    <span class="status-label">Letzte Synthetisierung:</span>
                    <span class="status-value">${hb.last_synthesis ? new Date(hb.last_synthesis).toLocaleString('de-DE') : 'Noch nie'}</span>
                </div>
                <div class="status-row">
                    <span class="status-label">Mode:</span>
                    <span class="status-value">${hb.mode}</span>
                </div>
                <div class="status-row">
                    <span class="status-label">Total Runs:</span>
                    <span class="status-value">${hb.run_count}</span>
                </div>
            `;
        }

        async function triggerConsolidation() {
            await executeAction('consolidate', 'consolidationResult', 'Konsolidierung');
        }

        async function triggerSynthesis() {
            await executeAction('synthesize', 'synthesisResult', 'Synthetisierung');
        }

        async function triggerDeepLearning() {
            await executeAction('deep_learning', 'deepLearningResult', 'Deep Learning');
        }

        async function triggerCleanup() {
            if (!confirm('M√∂chtest du wirklich alte Memories l√∂schen? Diese Aktion kann nicht r√ºckg√§ngig gemacht werden!')) {
                return;
            }
            await executeAction('cleanup', 'cleanupResult', 'Cleanup');
        }

        async function executeAction(action, resultId, actionName) {
            const resultBox = document.getElementById(resultId);
            const button = event.target.closest('button');

            // Disable button and show loading
            button.disabled = true;
            const originalContent = button.innerHTML;
            button.innerHTML = '<span class="loading"></span><span>L√§uft...</span>';

            // Show loading result
            resultBox.className = 'result-box show';
            resultBox.innerHTML = `
                <div class="result-title">
                    <span class="loading"></span>
                    <span>${actionName} l√§uft...</span>
                </div>
                <div class="result-content">Bitte warten, dies kann einige Sekunden dauern...</div>
            `;

            try {
                const response = await fetch('/v1/debug/heartbeat/ui-trigger', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        force_deep_learning: action === 'deep_learning',
                        mode: action
                    })
                });

                if (!response.ok) throw new Error(`HTTP ${response.status}`);

                const data = await response.json();

                // Show success result
                resultBox.className = 'result-box show success';
                resultBox.innerHTML = `
                    <div class="result-title">
                        <span>‚úÖ</span>
                        <span>${actionName} erfolgreich abgeschlossen</span>
                    </div>
                    <div class="result-content">${data.message || 'Operation erfolgreich durchgef√ºhrt.'}</div>
                    <div class="result-stats">
                        ${data.stats ? `
                            <div class="result-stat">
                                <div class="result-stat-value">${data.stats.consolidated || 0}</div>
                                <div class="result-stat-label">Konsolidiert</div>
                            </div>
                            <div class="result-stat">
                                <div class="result-stat-value">${data.stats.synthesized || 0}</div>
                                <div class="result-stat-label">Synthetisiert</div>
                            </div>
                            <div class="result-stat">
                                <div class="result-stat-value">${data.stats.deleted || 0}</div>
                                <div class="result-stat-label">Gel√∂scht</div>
                            </div>
                            <div class="result-stat">
                                <div class="result-stat-value">${data.stats.patterns_detected || 0}</div>
                                <div class="result-stat-label">Patterns</div>
                            </div>
                            <div class="result-stat">
                                <div class="result-stat-value">${data.stats.knowledge_gaps_found || 0}</div>
                                <div class="result-stat-label">Knowledge Gaps</div>
                            </div>
                            <div class="result-stat">
                                <div class="result-stat-value">${data.stats.memories_after || 0}</div>
                                <div class="result-stat-label">Memories danach</div>
                            </div>
                        ` : ''}
                    </div>
                `;

                // Reload status
                loadHeartbeatStatus();

            } catch (error) {
                console.error(`Error executing ${action}:`, error);
                resultBox.className = 'result-box show error';
                resultBox.innerHTML = `
                    <div class="result-title">
                        <span>‚ùå</span>
                        <span>Fehler bei ${actionName}</span>
                    </div>
                    <div class="result-content">${error.message}</div>
                `;
            } finally {
                // Re-enable button
                button.disabled = false;
                button.innerHTML = originalContent;
            }
        }
    </script>

