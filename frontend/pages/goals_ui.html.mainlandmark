    <script>
        const API_BASE_URL = 'http://localhost:8000';
        let currentFilter = 'all';
        let allGoals = [];
        let editingGoalId = null;

        // Load goals on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadGoals();
            loadStats();
            setupFilters();
        });

        // Setup filter buttons
        function setupFilters() {
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    currentFilter = btn.dataset.filter;
                    renderGoals();
                });
            });
        }

        // Load statistics
        async function loadStats() {
            try {
                const response = await fetch(`${API_BASE_URL}/v1/goals/stats/summary`);
                const data = await response.json();

                if (data.success) {
                    document.getElementById('statTotal').textContent = data.stats.total;
                    document.getElementById('statActive').textContent = data.stats.active;
                    document.getElementById('statCompleted').textContent = data.stats.completed;
                    document.getElementById('statProgress').textContent = Math.round(data.average_progress * 100) + '%';
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        // Load all goals
        async function loadGoals() {
            try {
                const response = await fetch(`${API_BASE_URL}/v1/goals`);
                allGoals = await response.json();
                renderGoals();
                loadStats(); // Refresh stats
            } catch (error) {
                console.error('Error loading goals:', error);
                document.getElementById('goalsContainer').innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ùå</div>
                        <div class="empty-state-text">Fehler beim Laden der Ziele</div>
                    </div>
                `;
            }
        }

        // Render goals based on filter
        function renderGoals() {
            const container = document.getElementById('goalsContainer');

            // Filter goals
            let filtered = allGoals;
            if (currentFilter !== 'all') {
                filtered = allGoals.filter(g => g.status === currentFilter);
            }

            if (filtered.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üéØ</div>
                        <div class="empty-state-text">Keine Ziele gefunden</div>
                        <button class="add-goal-btn" onclick="openNewGoalModal()">
                            <span>+</span>
                            <span>Erstes Ziel erstellen</span>
                        </button>
                    </div>
                `;
                return;
            }

            // Render goals
            container.innerHTML = `
                <div class="goals-grid">
                    ${filtered.map(goal => renderGoalCard(goal)).join('')}
                </div>
            `;
        }

        // Render single goal card
        function renderGoalCard(goal) {
            const created = new Date(goal.created_at).toLocaleDateString('de-DE');
            const targetDate = goal.target_date ? new Date(goal.target_date).toLocaleDateString('de-DE') : null;
            const progress = Math.round(goal.progress * 100);

            return `
                <div class="goal-card">
                    <div class="goal-header">
                        <div class="goal-title">${goal.content}</div>
                        <div class="goal-badges">
                            <span class="badge ${goal.status}">${translateStatus(goal.status)}</span>
                            <span class="badge priority-${goal.priority}">${translatePriority(goal.priority)}</span>
                            <span class="badge category">${translateCategory(goal.category)}</span>
                        </div>
                    </div>

                    <div class="goal-meta">
                        <span>üìÖ Erstellt: ${created}</span>
                        ${targetDate ? `<span>üéØ Ziel: ${targetDate}</span>` : ''}
                        <span>üí¨ Erw√§hnungen: ${goal.mentions}</span>
                    </div>

                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${progress}%"></div>
                    </div>
                    <div style="text-align: right; font-size: 12px; color: var(--text-secondary); margin-bottom: 12px;">
                        ${progress}% erreicht
                    </div>

                    <div class="goal-actions">
                        ${goal.status === 'active' ? `
                            <button class="action-btn complete" onclick="completeGoal('${goal.id}')">‚úì Abschlie√üen</button>
                        ` : ''}
                        <button class="action-btn" onclick="editGoal('${goal.id}')">‚úèÔ∏è Bearbeiten</button>
                        <button class="action-btn delete" onclick="deleteGoal('${goal.id}')">üóëÔ∏è L√∂schen</button>
                    </div>
                </div>
            `;
        }

        // Translation helpers
        function translateStatus(status) {
            const map = {
                'active': 'Aktiv',
                'completed': 'Abgeschlossen',
                'paused': 'Pausiert',
                'abandoned': 'Aufgegeben'
            };
            return map[status] || status;
        }

        function translatePriority(priority) {
            const map = {
                'low': 'Niedrig',
                'medium': 'Mittel',
                'high': 'Hoch',
                'urgent': 'Dringend!'
            };
            return map[priority] || priority;
        }

        function translateCategory(category) {
            const map = {
                'general': 'Allgemein',
                'health': 'Gesundheit',
                'learning': 'Lernen',
                'work': 'Arbeit',
                'finance': 'Finanzen',
                'personal': 'Pers√∂nlich',
                'creative': 'Kreativ'
            };
            return map[category] || category;
        }

        // Modal functions
        function openNewGoalModal() {
            editingGoalId = null;
            document.getElementById('modalTitle').textContent = 'Neues Ziel erstellen';
            document.getElementById('goalForm').reset();
            document.getElementById('goalModal').classList.add('show');
        }

        function closeGoalModal() {
            document.getElementById('goalModal').classList.remove('show');
        }

        // Save goal (create or update)
        async function saveGoal(event) {
            event.preventDefault();

            const content = document.getElementById('goalContent').value;
            const category = document.getElementById('goalCategory').value;
            const priority = document.getElementById('goalPriority').value;
            const targetDate = document.getElementById('goalTargetDate').value || null;

            const goalData = {
                content,
                category,
                priority,
                target_date: targetDate
            };

            try {
                const url = editingGoalId
                    ? `${API_BASE_URL}/v1/goals/${editingGoalId}`
                    : `${API_BASE_URL}/v1/goals`;

                const method = editingGoalId ? 'PUT' : 'POST';

                const response = await fetch(url, {
                    method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(goalData)
                });

                if (response.ok) {
                    closeGoalModal();
                    loadGoals();
                } else {
                    alert('Fehler beim Speichern des Ziels');
                }
            } catch (error) {
                console.error('Error saving goal:', error);
                alert('Fehler beim Speichern');
            }
        }

        // Edit goal
        function editGoal(goalId) {
            const goal = allGoals.find(g => g.id === goalId);
            if (!goal) return;

            editingGoalId = goalId;
            document.getElementById('modalTitle').textContent = 'Ziel bearbeiten';
            document.getElementById('goalContent').value = goal.content;
            document.getElementById('goalCategory').value = goal.category;
            document.getElementById('goalPriority').value = goal.priority;

            if (goal.target_date) {
                const date = new Date(goal.target_date);
                document.getElementById('goalTargetDate').value = date.toISOString().split('T')[0];
            }

            document.getElementById('goalModal').classList.add('show');
        }

        // Complete goal
        async function completeGoal(goalId) {
            if (!confirm('M√∂chtest du dieses Ziel als abgeschlossen markieren?')) return;

            try {
                const response = await fetch(`${API_BASE_URL}/v1/goals/${goalId}/complete`, {
                    method: 'PUT'
                });

                if (response.ok) {
                    loadGoals();
                } else {
                    alert('Fehler beim Abschlie√üen');
                }
            } catch (error) {
                console.error('Error completing goal:', error);
                alert('Fehler beim Abschlie√üen');
            }
        }

        // Delete goal
        async function deleteGoal(goalId) {
            if (!confirm('M√∂chtest du dieses Ziel wirklich l√∂schen?')) return;

            try {
                const response = await fetch(`${API_BASE_URL}/v1/goals/${goalId}`, {
                    method: 'DELETE'
                });

                if (response.ok || response.status === 204) {
                    loadGoals();
                } else {
                    alert('Fehler beim L√∂schen');
                }
            } catch (error) {
                console.error('Error deleting goal:', error);
                alert('Fehler beim L√∂schen');
            }
        }

        // Close modal on background click
        document.getElementById('goalModal').addEventListener('click', (e) => {
            if (e.target.id === 'goalModal') {
                closeGoalModal();
            }
        });
    </script>

