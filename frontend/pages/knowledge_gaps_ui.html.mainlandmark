    <script>
        let allGaps = [];

        // Load gaps on page load
        window.addEventListener('DOMContentLoaded', () => {
            loadGaps();
        });

        async function loadGaps() {
            try {
                const response = await fetch('/v1/knowledge-gaps');
                if (!response.ok) throw new Error('Failed to load knowledge gaps');

                allGaps = await response.json();

                // Load statistics
                const statsResponse = await fetch('/v1/knowledge-gaps/stats/summary');
                if (statsResponse.ok) {
                    const stats = await statsResponse.json();
                    updateStatistics(stats);
                }

                renderGaps();
            } catch (error) {
                console.error('Error loading gaps:', error);
                document.getElementById('gapsGrid').innerHTML = `
                    <div class="empty-state">
                        <p style="color: var(--error-color);">‚ùå Fehler beim Laden der Wissensl√ºcken</p>
                        <p>${error.message}</p>
                    </div>
                `;
            }
        }

        function updateStatistics(stats) {
            document.getElementById('totalGaps').textContent = stats.total_gaps || 0;
            document.getElementById('activeGaps').textContent = stats.active_gaps || 0;
            document.getElementById('dismissedGaps').textContent = stats.dismissed_gaps || 0;
            document.getElementById('avgPriority').textContent =
                stats.average_priority ? stats.average_priority.toFixed(1) : '0.0';
        }

        function renderGaps() {
            const grid = document.getElementById('gapsGrid');

            if (allGaps.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <h3>Keine Wissensl√ºcken gefunden</h3>
                        <p>Der Heartbeat wird automatisch Wissensl√ºcken erkennen</p>
                    </div>
                `;
                return;
            }

            // Sort by priority
            const sorted = allGaps.sort((a, b) => b.priority - a.priority);

            grid.innerHTML = sorted.map(gap => {
                const priorityClass = gap.priority >= 0.7 ? 'high-priority'
                    : gap.priority >= 0.4 ? 'medium-priority' : 'low-priority';

                const priorityLevel = gap.priority >= 0.7 ? 'high'
                    : gap.priority >= 0.4 ? 'medium' : 'low';

                return `
                    <div class="gap-card ${priorityClass}">
                        <div class="gap-header">
                            <div class="gap-title">
                                <div class="gap-name">${escapeHtml(gap.title)}</div>
                                <div class="gap-meta">
                                    <span class="badge ${gap.gap_type}">${getGapTypeLabel(gap.gap_type)}</span>
                                    <span class="meta-item">üìä Priority: ${(gap.priority * 100).toFixed(0)}%</span>
                                    <span class="confidence-badge">üéØ ${(gap.confidence * 100).toFixed(0)}% Confidence</span>
                                </div>
                            </div>
                            <button class="dismiss-btn" onclick="dismissGap('${gap.id}')">
                                Dismiss
                            </button>
                        </div>

                        <div class="gap-description">
                            ${escapeHtml(gap.description)}
                        </div>

                        <div class="gap-suggestion">
                            <div class="suggestion-label">üí° Vorschlag</div>
                            <div class="suggestion-text">${escapeHtml(gap.suggestion)}</div>
                        </div>

                        <div class="priority-bar">
                            <div class="priority-fill ${priorityLevel}" style="width: ${gap.priority * 100}%"></div>
                        </div>

                        <div class="gap-meta">
                            <span class="meta-item">üïê ${new Date(gap.created_at).toLocaleDateString('de-DE')}</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function dismissGap(gapId) {
            try {
                const response = await fetch(`/v1/knowledge-gaps/${gapId}/dismiss`, {
                    method: 'PUT'
                });

                if (!response.ok) throw new Error('Failed to dismiss gap');

                // Remove from UI
                allGaps = allGaps.filter(g => g.id !== gapId);
                renderGaps();

                // Reload stats
                const statsResponse = await fetch('/v1/knowledge-gaps/stats/summary');
                if (statsResponse.ok) {
                    const stats = await statsResponse.json();
                    updateStatistics(stats);
                }
            } catch (error) {
                console.error('Error dismissing gap:', error);
                alert('Fehler beim Dismissing der Wissensl√ºcke');
            }
        }

        function getGapTypeLabel(type) {
            const labels = {
                'topic_knowledge': 'üìö Themen-Wissen',
                'goal_prerequisite': 'üéØ Ziel-Voraussetzung',
                'interest_depth': 'üîç Interesse-Tiefe',
                'context_missing': '‚ùì Fehlender Kontext'
            };
            return labels[type] || type;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>

