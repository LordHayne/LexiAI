            background-color: var(--bg-color);
            color: var(--text-color);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .nav-bar {
            background: var(--card-bg);
            padding: 15px 25px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid var(--border-color);
        }

        .nav-links {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .nav-link {
            color: var(--text-color);
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.2s;
            border: 1px solid transparent;
            min-width: 100px;
            text-align: center;
        }

        .nav-link:hover {
            background: var(--section-bg);
            border-color: var(--primary-color);
        }

        .nav-link.active {
            background: var(--primary-color);
            color: white;
        }

        .header {
            background: linear-gradient(135deg, #ffb300 0%, #ff6f00 100%);
            padding: 30px;
            border-radius: 16px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        }

        .header h1 {
            font-size: 32px;
            font-weight: 600;
            color: white;
            margin-bottom: 8px;
        }

        .header p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 16px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--card-bg);
            padding: 20px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

        .stat-number {
            font-size: 36px;
            font-weight: bold;
            color: var(--warning-color);
            margin-bottom: 8px;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 14px;
        }

        .gaps-grid {
            display: grid;
            gap: 20px;
        }

        .gap-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            padding: 24px;
            border-radius: 12px;
            transition: all 0.2s;
            position: relative;
        }

        .gap-card:hover {
            border-color: var(--warning-color);
            box-shadow: 0 4px 16px rgba(255, 152, 0, 0.2);
        }

        .gap-card.high-priority {
            border-left: 4px solid var(--error-color);
        }

        .gap-card.medium-priority {
            border-left: 4px solid var(--warning-color);
        }

        .gap-card.low-priority {
            border-left: 4px solid var(--info-color);
        }

        .gap-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 15px;
        }

        .gap-title {
            flex: 1;
        }

        .gap-name {
            font-size: 20px;
            font-weight: 600;
            color: var(--text-color);
            margin-bottom: 8px;
        }

        .gap-description {
            color: var(--text-secondary);
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .gap-suggestion {
            background: var(--section-bg);
            padding: 15px;
            border-radius: 8px;
            border-left: 3px solid var(--warning-color);
            margin-top: 15px;
        }

        .suggestion-label {
            font-size: 12px;
            color: var(--warning-color);
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .suggestion-text {
            color: var(--text-color);
            line-height: 1.5;
        }

        .gap-meta {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-top: 15px;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
            color: var(--text-secondary);
            font-size: 14px;
        }

        .badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
            text-transform: uppercase;
        }

        .badge.topic_knowledge {
            background: rgba(33, 150, 243, 0.2);
            color: #64b5f6;
        }

        .badge.goal_prerequisite {
            background: rgba(156, 39, 176, 0.2);
            color: #ba68c8;
        }

        .badge.interest_depth {
            background: rgba(255, 152, 0, 0.2);
            color: #ffb74d;
        }

        .badge.context_missing {
            background: rgba(244, 67, 54, 0.2);
            color: #e57373;
        }

        .priority-bar {
            width: 100%;
            height: 6px;
            background: var(--section-bg);
            border-radius: 3px;
            overflow: hidden;
            margin-top: 10px;
        }

        .priority-fill {
            height: 100%;
            transition: width 0.3s;
        }

        .priority-fill.high {
            background: linear-gradient(90deg, var(--error-color), var(--warning-color));
        }

        .priority-fill.medium {
            background: linear-gradient(90deg, var(--warning-color), #ffeb3b);
        }

        .priority-fill.low {
            background: linear-gradient(90deg, #ffeb3b, var(--success-color));
        }

        .dismiss-btn {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-secondary);
            padding: 8px 16px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.2s;
        }

        .dismiss-btn:hover {
            background: var(--error-color);
            border-color: var(--error-color);
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
        }

        .empty-state svg {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: var(--text-secondary);
        }

        .spinner {
            border: 3px solid var(--section-bg);
            border-top: 3px solid var(--warning-color);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .confidence-badge {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 12px;
            background: rgba(76, 175, 80, 0.2);
            color: #81c784;
        }
    </style>
