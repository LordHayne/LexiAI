                <span>Nachrichten: <strong>0</strong></span>
            </div>
            <div class="stat-item">
                <span class="stat-icon">‚≠ê</span>
                <span>Feedback: <strong>0</strong></span>
            </div>
        </div>
    </div>

    <!-- Heartbeat Status Indicator -->
    <div class="heartbeat-status" id="heartbeatStatus">
        <div class="heartbeat-icon">ü´Ä</div>
        <div class="heartbeat-info">
            <div class="heartbeat-mode">
                <span id="heartbeatModeText">System</span>
                <span class="mode-badge" id="heartbeatModeBadge">ACTIVE</span>
            </div>
            <div class="heartbeat-description" id="heartbeatDescription">Bereit</div>
        </div>
    </div>

    <!-- Heartbeat Details Panel (shown on hover) -->
    <div class="heartbeat-details" id="heartbeatDetails">
        <h3>üß† Memory Intelligence</h3>
        <div class="heartbeat-stat">
            <span class="heartbeat-stat-label">Memories gesamt</span>
            <span class="heartbeat-stat-value" id="statTotalMemories">-</span>
        </div>
        <div class="heartbeat-stat">
            <span class="heartbeat-stat-label">Konsolidiert</span>
            <span class="heartbeat-stat-value highlight" id="statConsolidated">-</span>
        </div>
        <div class="heartbeat-stat">
            <span class="heartbeat-stat-label">Synthetisiert</span>
            <span class="heartbeat-stat-value highlight" id="statSynthesized">-</span>
        </div>
        <div class="heartbeat-stat">
            <span class="heartbeat-stat-label">Gel√∂scht</span>
            <span class="heartbeat-stat-value" id="statDeleted">-</span>
        </div>
        <div class="heartbeat-stat">
            <span class="heartbeat-stat-label">Letzter Run</span>
            <span class="heartbeat-stat-value" id="statLastRun">-</span>
        </div>

        <button class="heartbeat-trigger-btn" id="triggerHeartbeat">
            <span>‚ö°</span>
            <span id="triggerBtnText">Jetzt Konsolidieren</span>
        </button>
        <div class="heartbeat-success" id="triggerSuccess" style="display: none;"></div>
    </div>

    <script>
        const API_BASE_URL = window.location.origin;
        const chatMessages = document.getElementById('chatMessages');
        const messageInput = document.getElementById('messageInput');
        const sendBtn = document.getElementById('sendBtn');
        const typingIndicator = document.getElementById('typingIndicator');
        const stats = document.getElementById('stats');

        let messageCount = 0;
        let feedbackCount = 0;

        // Remove welcome message on first interaction
        let isFirstMessage = true;

        // Send message on Enter
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        // Send message on button click
        sendBtn.addEventListener('click', sendMessage);

        function buildUserHeaders(headers = {}) {
            if (window.userManager) {
                return userManager.injectUserIdHeader(headers);
            }
            return { ...headers };
        }

        async function userFetch(url, options = {}) {
            if (window.userManager) {
                return userManager.authenticatedFetch(url, options);
            }
            return fetch(url, options);
        }

        async function sendMessage() {
            const message = messageInput.value.trim();
            if (!message) return;

            // Remove welcome message on first message
            if (isFirstMessage) {
                const welcomeMsg = document.querySelector('.welcome-message');
                if (welcomeMsg) welcomeMsg.remove();
                isFirstMessage = false;
            }

            // Add user message to chat
            addMessage('user', message);
            messageInput.value = '';
            messageCount++;
            updateStats();

            // Show typing indicator
            typingIndicator.classList.add('show');
            sendBtn.disabled = true;

            try {
                // Call chat API
                const response = await userFetch(`${API_BASE_URL}/ui/chat`, {
                    method: 'POST',
                    headers: buildUserHeaders({
                        'Content-Type': 'application/json'
                    }),
                    body: JSON.stringify({
                        message: message
                    })
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();

                // Hide typing indicator
                typingIndicator.classList.remove('show');

                // Add assistant response with feedback buttons (only if turn_id provided)
                const turnId = data.turn_id || null;
                addMessage('assistant', data.response || data.message, turnId);

            } catch (error) {
                console.error('Error:', error);
                typingIndicator.classList.remove('show');
                addMessage('assistant', 'Entschuldigung, es gab einen Fehler. Bitte versuche es erneut.');
            } finally {
                sendBtn.disabled = false;
                messageInput.focus();
            }
        }

        function addMessage(type, content, turnId = null) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;

            const contentDiv = document.createElement('div');
            contentDiv.className = 'message-content';
            contentDiv.textContent = content;

            const timestamp = document.createElement('div');
            timestamp.className = 'timestamp';
            timestamp.textContent = new Date().toLocaleTimeString('de-DE', {
                hour: '2-digit',
                minute: '2-digit'
            });

            messageDiv.appendChild(contentDiv);
            messageDiv.appendChild(timestamp);

            // Add feedback buttons for assistant messages
            if (type === 'assistant' && turnId) {
                const feedbackDiv = document.createElement('div');
                feedbackDiv.className = 'feedback-buttons';

                const thumbsUpBtn = createFeedbackButton('üëç', 'thumbs-up', turnId, messageDiv);
                const thumbsDownBtn = createFeedbackButton('üëé', 'thumbs-down', turnId, messageDiv);
                const correctBtn = createFeedbackButton('‚úèÔ∏è', 'correct', turnId, messageDiv);

                feedbackDiv.appendChild(thumbsUpBtn);
                feedbackDiv.appendChild(thumbsDownBtn);
                feedbackDiv.appendChild(correctBtn);
                messageDiv.appendChild(feedbackDiv);
            }

            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function createFeedbackButton(emoji, type, turnId, messageDiv) {
            const btn = document.createElement('button');
            btn.className = 'feedback-btn';
            btn.textContent = emoji;

            if (type === 'thumbs-up') {
                btn.title = 'Gute Antwort';
            } else if (type === 'thumbs-down') {
                btn.title = 'Schlechte Antwort';
            } else if (type === 'correct') {
                btn.title = 'Korrigieren';
            }

            btn.addEventListener('click', async () => {
                if (btn.classList.contains('active')) return;

                if (type === 'correct') {
                    showCorrectionInput(turnId, messageDiv, btn);
                } else {
                    await sendFeedback(type, turnId);
                    btn.classList.add('active');
                    feedbackCount++;
                    updateStats();
                }
            });

            return btn;
        }

        async function sendFeedback(type, turnId) {
            try {
                const userId = window.userManager ? userManager.getUserId() : null;
                const payload = {
                    turn_id: turnId,
                    ...(userId ? { user_id: userId } : {})
                };
                const response = await userFetch(`${API_BASE_URL}/v1/feedback/${type}`, {
                    method: 'POST',
                    headers: buildUserHeaders({
                        'Content-Type': 'application/json'
                    }),
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    console.log(`Feedback ${type} sent for turn ${turnId}`);
                } else {
                    console.error('Failed to send feedback');
                }
            } catch (error) {
                console.error('Error sending feedback:', error);
            }
        }

        function showCorrectionInput(turnId, messageDiv, correctBtn) {
            if (messageDiv.querySelector('.correction-input-container')) {
                return;
            }

            const correctionContainer = document.createElement('div');
            correctionContainer.className = 'correction-input-container show';

            const correctionTextarea = document.createElement('textarea');
            correctionTextarea.className = 'correction-input';
            correctionTextarea.placeholder = 'Gib hier die korrekte Antwort ein...';

            const submitBtn = document.createElement('button');
            submitBtn.className = 'correction-submit-btn';
            submitBtn.textContent = 'Korrektur senden';

            submitBtn.addEventListener('click', async () => {
                const correctionText = correctionTextarea.value.trim();
                if (!correctionText) {
                    alert('Bitte gib eine Korrektur ein');
                    return;
                }

                try {
                    const userId = window.userManager ? userManager.getUserId() : null;
                    const payload = {
                        turn_id: turnId,
                        correction_text: correctionText,
                        ...(userId ? { user_id: userId } : {})
                    };
                    const response = await userFetch(`${API_BASE_URL}/v1/feedback/correction`, {
                        method: 'POST',
                        headers: buildUserHeaders({
                            'Content-Type': 'application/json'
                        }),
                        body: JSON.stringify(payload)
                    });

                    if (response.ok) {
                        console.log(`Correction sent for turn ${turnId}`);
                        correctBtn.classList.add('active');
                        correctionContainer.remove();
                        feedbackCount++;
                        updateStats();

                        const successMsg = document.createElement('div');
                        successMsg.textContent = '‚úÖ Korrektur gespeichert';
                        successMsg.style.cssText = 'font-size: 12px; color: var(--success-color); margin-top: 5px; padding: 0 8px;';
                        messageDiv.appendChild(successMsg);
                        setTimeout(() => successMsg.remove(), 3000);
                    } else {
                        console.error('Failed to send correction');
                        alert('Fehler beim Senden der Korrektur');
                    }
                } catch (error) {
                    console.error('Error sending correction:', error);
                    alert('Fehler beim Senden der Korrektur');
                }
            });

            correctionContainer.appendChild(correctionTextarea);
            correctionContainer.appendChild(submitBtn);
            messageDiv.appendChild(correctionContainer);
            correctionTextarea.focus();
        }

        function generateTurnId() {
            return `turn_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
        }

        function updateStats() {
            stats.innerHTML = `
                <div class="stat-item">
                    <span class="stat-icon">üí¨</span>
                    <span>Nachrichten: <strong>${messageCount}</strong></span>
                </div>
                <div class="stat-item">
                    <span class="stat-icon">‚≠ê</span>
                    <span>Feedback: <strong>${feedbackCount}</strong></span>
                </div>
            `;
        }

        // Heartbeat Status Monitoring
        const heartbeatStatus = document.getElementById('heartbeatStatus');
        const heartbeatModeText = document.getElementById('heartbeatModeText');
        const heartbeatModeBadge = document.getElementById('heartbeatModeBadge');
        const heartbeatDescription = document.getElementById('heartbeatDescription');
        const statTotalMemories = document.getElementById('statTotalMemories');
        const statConsolidated = document.getElementById('statConsolidated');
        const statSynthesized = document.getElementById('statSynthesized');
        const statDeleted = document.getElementById('statDeleted');
        const statLastRun = document.getElementById('statLastRun');

        async function updateHeartbeatStatus() {
            try {
                const response = await fetch(`${API_BASE_URL}/v1/debug/heartbeat/status`);
                if (!response.ok) {
                    console.warn('Failed to fetch heartbeat status');
                    return;
                }

                const data = await response.json();
                const heartbeat = data.heartbeat;

                // Update mode badge and styling
                const mode = heartbeat.mode || 'UNKNOWN';
                heartbeatModeBadge.textContent = mode;

                if (mode === 'IDLE') {
                    heartbeatStatus.classList.add('idle');
                    heartbeatModeText.textContent = 'Memory Intelligence';
                    heartbeatDescription.textContent = 'Konsolidiert Erinnerungen...';
                } else {
                    heartbeatStatus.classList.remove('idle');
                    heartbeatModeText.textContent = 'System';
                    heartbeatDescription.textContent = 'Bereit';
                }

                // Update statistics
                statTotalMemories.textContent = heartbeat.total_memories || 0;
                statConsolidated.textContent = heartbeat.consolidated_count || 0;
                statSynthesized.textContent = heartbeat.synthesized_count || 0;
                statDeleted.textContent = heartbeat.deleted_count || 0;

                // Format last run time
                if (heartbeat.last_run) {
                    const lastRun = new Date(heartbeat.last_run);
                    const now = new Date();
                    const diffMs = now - lastRun;
                    const diffMins = Math.floor(diffMs / 60000);

                    if (diffMins < 1) {
                        statLastRun.textContent = 'Gerade eben';
                    } else if (diffMins < 60) {
                        statLastRun.textContent = `vor ${diffMins} Min`;
                    } else {
                        const diffHours = Math.floor(diffMins / 60);
                        statLastRun.textContent = `vor ${diffHours}h`;
                    }
                } else {
                    statLastRun.textContent = 'Noch nicht gelaufen';
                }

            } catch (error) {
                console.error('Error updating heartbeat status:', error);
            }
        }

        // Update heartbeat status every 10 seconds
        updateHeartbeatStatus(); // Initial update
        setInterval(updateHeartbeatStatus, 10000); // Update every 10s

        // Trigger Heartbeat Button Handler
        const triggerBtn = document.getElementById('triggerHeartbeat');
        const triggerBtnText = document.getElementById('triggerBtnText');
        const triggerSuccess = document.getElementById('triggerSuccess');

        triggerBtn.addEventListener('click', async () => {
            // Disable button and show loading
            triggerBtn.disabled = true;
            triggerBtn.classList.add('loading');
            triggerBtnText.textContent = 'Konsolidiere...';

            // Add spinner
            const spinner = document.createElement('div');
            spinner.className = 'spinner';
            triggerBtn.insertBefore(spinner, triggerBtnText);

            // Hide previous success message
            triggerSuccess.style.display = 'none';

            try {
                const response = await fetch(`${API_BASE_URL}/v1/debug/heartbeat/ui-trigger`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (!response.ok) {
                    throw new Error('Trigger failed');
                }

                const data = await response.json();

                // Show success message
                triggerSuccess.style.display = 'block';
                triggerSuccess.textContent = `‚úÖ ${data.message} | ${data.stats.consolidated} konsolidiert, ${data.stats.synthesized} synthetisiert`;

                // Update stats immediately
                await updateHeartbeatStatus();

                // Hide success message after 5 seconds
                setTimeout(() => {
                    triggerSuccess.style.display = 'none';
                }, 5000);

            } catch (error) {
                console.error('Error triggering heartbeat:', error);
                triggerSuccess.style.display = 'block';
                triggerSuccess.style.borderColor = 'var(--error-color)';
                triggerSuccess.style.color = 'var(--error-color)';
                triggerSuccess.textContent = '‚ùå Fehler beim Starten der Konsolidierung';

                setTimeout(() => {
                    triggerSuccess.style.display = 'none';
                }, 3000);
            } finally {
                // Re-enable button
                triggerBtn.disabled = false;
                triggerBtn.classList.remove('loading');
                triggerBtnText.textContent = 'Jetzt Konsolidieren';
                spinner.remove();
            }
        });

        // Focus input on load
        window.addEventListener('load', () => {
            messageInput.focus();
        });
    </script>

    <!-- Verbesserte Navigation Script -->
    <script defer src="/frontend/js/navigation_improved.js"></script>
    <script defer src="/frontend/js/auth-manager.js"></script>
    <script defer src="/frontend/js/user-manager.js"></script>
    <script defer src="/frontend/js/auth-integration.js"></script>
    <script defer src="/frontend/js/breadcrumbs.js"></script>
    <script defer src="/frontend/js/search.js"></script>
    <script>
        // Initialize AuthManager and UserManager
        window.authManager = new AuthManager();
        window.userManager = new UserManager(authManager);

        // Update auth UI based on login state
        function updateAuthUI() {
            const authButtonsAnonymous = document.getElementById('authButtonsAnonymous');
            const userMenuDropdown = document.getElementById('userMenuDropdown');
            const userAvatar = document.getElementById('userAvatar');
            const userMenuName = document.getElementById('userMenuName');
            const userMenuHeaderName = document.getElementById('userMenuHeaderName');
            const userMenuEmail = document.getElementById('userMenuEmail');

            if (authManager.isLoggedIn()) {
                // Show user menu for logged-in users
                if (authButtonsAnonymous) authButtonsAnonymous.style.display = 'none';
                if (userMenuDropdown) userMenuDropdown.style.display = 'block';

                const user = authManager.getUserData();
                if (user && userAvatar && userMenuName && userMenuHeaderName && userMenuEmail) {
                    const initial = user.email ? user.email.charAt(0).toUpperCase() : '?';
                    userAvatar.textContent = initial;
                    userMenuName.textContent = user.display_name || user.email.split('@')[0];
                    userMenuHeaderName.textContent = user.display_name || user.email.split('@')[0];
                    userMenuEmail.textContent = user.email;
                }
            } else {
                // Show auth buttons for anonymous users
                if (authButtonsAnonymous) authButtonsAnonymous.style.display = 'flex';
                if (userMenuDropdown) userMenuDropdown.style.display = 'none';
            }
        }

        // Handle logout
        async function handleLogout() {
            if (confirm('M√∂chtest du dich wirklich abmelden?')) {
                await authManager.logout();
                updateAuthUI();
            }
        }

        // Continue as guest (dismiss auth prompt)
        function continueAsGuest() {
            closeAuthModal();
            console.log('Continuing as guest user');
        }

        // Listen for auth state changes
        window.addEventListener('auth-changed', () => {
            updateAuthUI();
        });

        // Initialize user and handle auth state
        userManager.init().then(() => {
            console.log('‚úÖ User initialized:', userManager.getUserId());
            updateAuthUI();
        }).catch(error => {
            console.error('‚ùå UserManager initialization failed:', error);
        });
    </script>

    <!-- Auth Modal -->
    <div class="auth-modal" id="authModal">
