                    <input type="password" class="auth-form-input" id="registerPasswordConfirm" placeholder="Passwort wiederholen" required minlength="8">
                </div>

                <button type="submit" class="auth-form-button" id="registerSubmitBtn">
                    Registrieren
                </button>
            </form>
        </div>
    </div>

